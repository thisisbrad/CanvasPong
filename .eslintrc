{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true
    }
  },
  "rules": {
    "no-use-before-define": 0,
    "comma-dangle": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "no-param-reassign": ["error", { "props": false }],
    "no-mixed-operators": 0,
    "no-undef": 1
  }
}
